@{
    ViewBag.Title = "SandyStore";
}

@if (!Request.IsAuthenticated)
{
    <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/Content/Imagenes/Home1.png" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
                <img src="~/Content/Imagenes/Home2.png" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
                <img src="~/Content/Imagenes/Home3.png" class="d-block w-100" alt="...">
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>

}
else
{
    <div class="container my-5 py-5">
        <section class="text-center">
            <div class="row">
                @foreach (var DatoProducto in ViewBag.ListaProductos)
                {
                    <div class="col-lg-4 col-md-4 mb-4">
                        @using (Html.BeginForm("Index", "Pedidos", FormMethod.Post))
                        {
                            double Valor = DatoProducto.ProValor;
                            @Html.Hidden("Valor", Valor.ToString())

                            <a href="" class="waves-effect waves-light">
                                <img src="~/ImagenesProductos/@DatoProducto.ProNombre/@DatoProducto.ProRutaImagen" width="150" height="150" class="img-fluid"
                                     alt="">
                            </a>
                            <p class="mb-1"><a href="" class="font-weight-bold black-text">@DatoProducto.ProNombre</a></p>
                            <p class="mb-1">@*<small class="mr-1"><s>$599</s></small>*@<strong>@DatoProducto.ProValor</strong></p>
                            
                            <span class="badge darken-1 mb-2" style="color:black">Cantidad <input id="DPedCantidad" name="DPedCantidad" class="form-control" min="1" required /></span>
                            <span class="badge darken-1 mb-2" style="color:black">
                                <button class="btn btn-danger btn-block btn-lg" type="submit">
                                    Agregar a Pedido
                                </button>
                            </span>

                        }
                    </div>
                }
            </div>
        </section>
    </div>
}
