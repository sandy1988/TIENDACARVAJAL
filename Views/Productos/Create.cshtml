@model SandyStore.Models.Productos


@using (Html.BeginForm("Create", "Productos", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="container" style="margin-top:5%">
        <div class="card">
            <div class="card-header bg-info text-center">
                <h2>Crear Producto</h2>
            </div>
            <div class="card-body text-center">

                <div class="form-group">
                    <span class="input-group-text-form">
                        @Html.LabelFor(model => model.DepDescripcion)
                    </span>
                    @Html.DropDownList("DepID", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.DepID, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <span class="input-group-text-form">
                        @Html.LabelFor(model => model.ProNombre)
                    </span>
                    @Html.EditorFor(model => model.ProNombre, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ProNombre, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <span class="input-group-text-form">
                        @Html.LabelFor(model => model.ProDescripcion)
                    </span>
                    @Html.EditorFor(model => model.ProDescripcion, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ProDescripcion, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <span class="input-group-text-form">
                        @Html.LabelFor(model => model.ProValor)
                    </span>
                    @Html.EditorFor(model => model.ProValor, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ProValor, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <div class="input-group-text-form">
                        @Html.LabelFor(model => model.ProRutaImagen)
                    </div>
                    <input type="file" class="custom-file-label" id="ProRutaImagen" name="ProRutaImagen" data-validation="mime size" data-validation-allowing="jpg, png, gif" data-validation-max-size="2M" />
                    @Html.ValidationMessageFor(model => model.ProRutaImagen, "", new { @class = "text-danger" })
                </div>

            </div>
            <div class="card-footer text-center">
                <a class='btn btn-danger btn-sm' href="@Url.Action("Index")">
                    Regresar
                </a>
                <button class="btn btn-info btn-sm" type="submit">Guardar</button>
            </div>
        </div>

    </div>
}
